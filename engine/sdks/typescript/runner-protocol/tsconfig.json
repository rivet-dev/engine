{
	"extends": "../../../../tsconfig.base.json",
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2020"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020"
	},
	"exclude": ["dist", "node_modules"],
	"include": ["**/*.ts"]
}
