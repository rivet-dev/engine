{
	"data_dir": "/vector-data-dir",
	"sources": {
		"vector": {
			"type": "vector",
			"address": "0.0.0.0:5020"
		},
		"tcp_json": {
			"type": "socket",
			"mode": "tcp",
			"address": "0.0.0.0:5021",
			"decoding": {
				"codec": "json"
			}
		},
		"vector_logs": {
			"type": "internal_logs"
		}
	},
	"transforms": {
		"runners": {
			"type": "filter",
			"inputs": [
				"vector",
				"tcp_json"
			],
			"condition": {
				"type": "vrl",
				"source": ".source == \"runners\""
			}
		},
		"add_prefix": {
			"type": "remap",
			"inputs": [
				"runners"
			],
			"source": ".message, err = \"\u001b[2m\" + \"runner_id=\" + .runner_id + \"\u001b[0m \" + .message"
		}
	},
	"sinks": {
		"runner_logs": {
			"type": "console",
			"inputs": [
				"add_prefix"
			],
			"encoding": {
				"codec": "text"
			}
		},
		"console": {
			"type": "console",
			"inputs": [
				"vector_logs"
			],
			"encoding": {
				"codec": "text"
			}
		}
	}
}