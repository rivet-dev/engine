{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Root",
  "type": "object",
  "properties": {
    "actors": {
      "default": {},
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/Actor"
      }
    },
    "containers": {
      "default": {},
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/Actor"
      }
    },
    "functions": {
      "default": {},
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/Function"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "Actor": {
      "type": "object",
      "anyOf": [
        {
          "$ref": "#/definitions/Build"
        },
        {
          "$ref": "#/definitions/Build2"
        }
      ],
      "properties": {
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "Build": {
      "type": "object",
      "properties": {
        "build_args": {
          "description": "Build arguments to pass to the build.",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "build_path": {
          "description": "Directory to build the Docker image from.",
          "type": "string"
        },
        "build_target": {
          "description": "Build target to upload.",
          "type": "string"
        },
        "dockerfile": {
          "description": "Dockerfile to build.",
          "type": "string"
        },
        "image": {
          "description": "Existing image tag to upload.",
          "type": "string"
        },
        "unstable": {
          "description": "Unstable features.",
          "allOf": [
            {
              "$ref": "#/definitions/Unstable"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "Build2": {
      "type": "object",
      "required": [
        "script"
      ],
      "properties": {
        "script": {
          "type": "string"
        },
        "unstable": {
          "default": {
            "minify": null,
            "analyze_result": null,
            "esbuild_log_level": null,
            "compression": null,
            "dump_build": null,
            "no_bundler": null
          },
          "allOf": [
            {
              "$ref": "#/definitions/Unstable2"
            }
          ]
        }
      }
    },
    "BuildMethod": {
      "oneOf": [
        {
          "description": "Use the native Docker build command. Only used if Buildx is not available.",
          "type": "string",
          "enum": [
            "buildx"
          ]
        },
        {
          "description": "Create & use a Buildx builder on this machine. Required for cross-platform compilation.",
          "type": "string",
          "enum": [
            "native"
          ]
        }
      ]
    },
    "BundleKind": {
      "oneOf": [
        {
          "description": "Legacy option. Docker image archive output from `docker save`. Slower lobby start times.",
          "type": "string",
          "enum": [
            "docker_image"
          ]
        },
        {
          "description": "OCI bundle archive derived from a generated Docker image. Optimized for fast lobby start times.",
          "type": "string",
          "enum": [
            "oci_bundle"
          ]
        }
      ]
    },
    "Compression": {
      "oneOf": [
        {
          "description": "No compression.",
          "type": "string",
          "enum": [
            "none"
          ]
        },
        {
          "description": "LZ4 compression. Fast compression optimized for fast lobby start times.",
          "type": "string",
          "enum": [
            "lz4"
          ]
        }
      ]
    },
    "Function": {
      "type": "object",
      "anyOf": [
        {
          "$ref": "#/definitions/Build"
        },
        {
          "$ref": "#/definitions/Build2"
        }
      ],
      "properties": {
        "networking": {
          "default": {
            "internal_port": null
          },
          "allOf": [
            {
              "$ref": "#/definitions/FunctionNetworking"
            }
          ]
        },
        "path": {
          "type": "string"
        },
        "resources": {
          "default": null,
          "allOf": [
            {
              "$ref": "#/definitions/Resources"
            }
          ]
        },
        "route_subpaths": {
          "type": "boolean"
        },
        "strip_prefix": {
          "default": null,
          "type": "boolean"
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "FunctionNetworking": {
      "type": "object",
      "properties": {
        "internal_port": {
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        }
      }
    },
    "Resources": {
      "type": "object",
      "required": [
        "cpu",
        "memory"
      ],
      "properties": {
        "cpu": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "memory": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    },
    "Unstable": {
      "type": "object",
      "properties": {
        "allow_root": {
          "type": "boolean"
        },
        "build_method": {
          "$ref": "#/definitions/BuildMethod"
        },
        "bundle": {
          "$ref": "#/definitions/BundleKind"
        },
        "compression": {
          "$ref": "#/definitions/Compression"
        }
      },
      "additionalProperties": false
    },
    "Unstable2": {
      "type": "object",
      "properties": {
        "analyze_result": {
          "type": "boolean"
        },
        "compression": {
          "$ref": "#/definitions/Compression"
        },
        "dump_build": {
          "type": "boolean"
        },
        "esbuild_log_level": {
          "type": "string"
        },
        "minify": {
          "type": "boolean"
        },
        "no_bundler": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}